@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
        <th>Sil</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.PersonelID</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>
                <img src="@k.PersonelGorsel" style="width: 100px; height:100px; display:block; margin:auto; width:100%"/>
            </td>
            <td>@k.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-dark">Detaylar</a>
            </td>
            <td><a href="/Personel/PersonelSil/@k.PersonelID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

